<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.NoticeUi">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notice" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="Notice"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/id_ui_notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/id_ui_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ID_NoticeCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ID_CardSentNotification"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            app:srcCompat="@drawable/sent_notifications" />

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="55dp"
                            android:fontFamily="@font/abhaya_libre"
                            android:text="Sent"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/abhaya_libre"
                            android:text="Notifications"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ID_CardNotifyAll"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="215dp"
                        android:layout_marginRight="40dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="95dp"
                            android:layout_height="94dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="26dp"
                            android:layout_marginRight="30dp"
                            app:srcCompat="@drawable/notify_all" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="55dp"
                            android:fontFamily="@font/abhaya_libre"
                            android:text="Notify"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/abhaya_libre"
                            android:text="All"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ID_CardStudNotify"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="430dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="35dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="150dp"
                            android:layout_height="130dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/student_notification" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="55dp"
                            android:fontFamily="@font/abhaya_libre"
                            android:text="Student"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="30dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/abhaya_libre"
                            android:text="Notify"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>