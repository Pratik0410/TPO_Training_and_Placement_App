<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.placementopportunity.EditPlacementOpportunityActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/id_arrow_back_image_button_in_activity_add_placement_opportunity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@color/black"
                android:src="@drawable/arrow_back"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="03dp"
                android:fontFamily="@font/abhaya_libre"
                android:text="Edit Placement Opportunity"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/ic_company_name" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/id_company_name_text_view_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/abhaya_libre"
                        android:hint="@string/hint_company_name"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="#A63A3535"
                        android:textColorLink="@color/black"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        app:boxStrokeColor="@color/black" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_text_input_layout_for_job"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:hint="@string/role_textview"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_role">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_role_edit_text_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColorHint="#A63A3535"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        android:tooltipText="System Experience Engineer"
                        app:boxStrokeColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:hint="@string/location_textview"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_location">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_location_edit_text_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColorHint="#A63A3535"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        app:boxStrokeColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:hint="@string/summary_textview"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_summary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_summary_edit_text_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColorHint="#A63A3535"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        app:boxStrokeColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:hint="@string/key_qualification_textview"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_key_qualifications">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_key_qualification_edit_text_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_key_qualifications"
                        android:fontFamily="@font/abhaya_libre"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColorHint="#A63A3535"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        app:boxStrokeColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:hint="@string/job_description_textview"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_job_description">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_job_description_edit_text_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColorHint="#A63A3535"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        app:boxStrokeColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:hint="@string/additional_requirements_textview"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_additional_requirement">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_additional_requirements_edit_text_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColorHint="#A63A3535"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        app:boxStrokeColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:hint="@string/link_for_applying_hint"
                    app:boxStrokeColor="@color/black"
                    app:endIconMode="custom"
                    app:hintTextColor="@color/black"
                    app:startIconDrawable="@drawable/ic_link">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_link_for_applying_edit_text_in_activity_edit_placement_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:padding="15dp"
                        android:textColorHint="#A63A3535"
                        android:textCursorDrawable="@color/black"
                        android:textSize="20sp"
                        app:boxStrokeColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/id_update_placement_button_in_activity_edit_placement_opportunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/abhaya_libre"
                    android:text="@string/update_button"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/id_delete_placement_button_in_activity_edit_placement_opportunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/abhaya_libre"
                    android:text="@string/delete_button"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>